@model List<MenuItem>


<div class="row">
    <div class="panel panel-warning">
        <div class="panel-heading text-center">Our Menu..</div>
        <div class="panel-body">
            @foreach (var item in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-left">
                            <div class="col-sm-12">
                                <h4 class="pull-left" id="itemid">@item.Id</h4>
                                <h4>@item.Name</h4>
                            </div>
                            <div class="col-sm-12"><p>@item.Description -@item.Price kr</p></div>
                        </div>
                        <div class="pull-right">
                            @{
                                @if (!item.InStock())
                                {
                                    <div class="col-sm-12" id="@item.Id">
                                        <form asp-controller="Home" asp-action="Index" asp-route-id="@item.Id" class="input-group">
                                            <div class="col-sm-4"><input type="submit" value="Slut" class="btn btn-default" id="addorder" disabled /></div>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-sm-12" id="@item.Id">
                                        <form asp-controller="Home" asp-action="Index" asp-route-id="@item.Id" class="input-group">
                                            <div class="col-sm-4"><input type="submit" value="Beställ" class="btn btn-default" id="addorder" /></div>
                                        </form>
                                    </div>
                                }

                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


</div>
<script src="~/lib/signalr/signalr.js"></script>
    <script src="~/js/menu.js"></script>


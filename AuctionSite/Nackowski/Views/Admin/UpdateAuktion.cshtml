@model Nackowski.Models.API_ViewModels.AuktionVM

<div class="row">
    <div class="col-sm-12 col-md-9 offset-md-2 mb-4 mt-4">
        <div class="card">
            <div class="card-header text-center">
                <h2>Uppdatera Auktion</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Admin" asp-action="Update" method="post">
                    <div class="mb-4">
                        <div class="col-sm-6 pull-left">
                            <div class="form-group row">
                                <label class="col-12 col-form-label" asp-for="Titel"></label>

                                <div class="col-12">
                                    <input class="form-control" asp-for="Titel" value="@Model.Titel" />
                                    <span asp-validation-for="Titel"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label" asp-for="Beskrivning"></label>

                                <div class="col-12">
                                    <textarea class="form-control" rows="10" cols="30" type="text" asp-for="Beskrivning" value="@Model.Beskrivning"></textarea>
                                    <span asp-validation-for="Beskrivning"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 pull-right">
                            <div class="form-group row">
                                <label class="col-12 col-form-label" asp-for="Utropspris"></label>
                                <div class="col-12">
                                    <input class="form-control" asp-for="Utropspris" value="@Model.Utropspris" />
                                    <span asp-validation-for="Utropspris"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label" asp-for="StartDatum"></label>
                                <div class="col-12">
                                    <input class="form-control" type="datetime-local" asp-for="StartDatum" value="@Model.StartDatum" />
                                    <span asp-validation-for="StartDatum"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label" asp-for="SlutDatum"></label>
                                <div class="col-12">
                                    <input class="form-control" type="datetime-local" asp-for="SlutDatum" value="@Model.SlutDatum" />
                                    <span asp-validation-for="SlutDatum"></span>
                                </div>
                            </div>
                            <input class="form-control" type="hidden" asp-for="SkapadAv" value="@Model.SkapadAv" />
                            <input class="form-control" type="hidden" asp-for="AuktionID" value="@Model.AuktionID" />
                        </div>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-success pull-right">Submit</button>
                    </div>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="AuktionDetails" asp-route-Id="@Model.AuktionID" class="btn btn-success pull-left">Tillbaka</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


